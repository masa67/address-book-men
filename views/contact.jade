block content
  div(class='container')
    if (action == 'add')
      h1 New contact
    else
      h1 Update contact
    form(data-ajax='false')
      if (msg)
        div(class='msgbox')
          div(class='highlight') #{msg}
          div(class='back')
            a(onclick='abook.clickContactBack()') Back
      input(id='id' type='hidden' name='id' value='#{id}')
      label Name *
      input(id='name' type='text' name='name' value='#{name}')
      br
      label Address
      input(id='address' type='text' name='address' value='#{address}')
      br
      label E-mail
      input(id='email' type='text' name='email' value='#{email}')
      br
      label Phone
      input(id='phone' type='text' name='phone' value='#{phone}')
      br
      label Birthday
      input(id='birthday' type='date' name='birthday' value='#{birthday}')
      br
      label Other information
      br
      textarea(id='otherInfo' name='otherInfo' value='#{otherInfo}')
      br
      p * = Mandatory
      if (error)
        p(class="alert") #{error)
    if (action == 'add')
      button(onclick='abook.clickContactAdd()') Add Contact
    else
      button(onclick='abook.clickContactUpdate()') Update Contact
      button(onclick='abook.clickContactDelete()') Delete Contact
    button(onclick='abook.clickContactCancel()') Cancel